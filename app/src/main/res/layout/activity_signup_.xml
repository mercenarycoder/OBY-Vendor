<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:padding="20dp"
    android:background="#fff"
    tools:context=".signup_Activity">
<ImageView
    android:layout_width="125dp"
    android:layout_height="125dp"
   android:layout_gravity="center"
    android:layout_weight="1"
    android:src="@drawable/vendorlogo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Sign Up Screen"
        android:textColor="#000"

        android:textSize="22sp"
        android:layout_marginBottom="10dp"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_weight="1"
    android:background="@drawable/support_edittext"
    android:inputType="text"
    android:textSize="18sp"
    android:textColor="#000"
    android:id="@+id/sign_up_name"
    android:hint="Name"
    android:gravity="center|left"
    android:paddingStart="15dp"
    android:maxLines="1"
    android:textColorHint="#7C7979"
    android:layout_marginBottom="13dp"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginBottom="13dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:gravity="center|left"
        android:hint="Email"
        android:id="@+id/sign_up_email"
        android:paddingStart="15dp"
        android:maxLines="1"
        android:textColorHint="#7C7979"
        android:background="@drawable/support_edittext"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18sp"
       android:layout_weight="1"
        android:gravity="center|left"
        android:textColor="#000"
        android:hint="Contact Number"
        android:maxLines="1"
        android:id="@+id/sign_up_number"
        android:paddingStart="15dp"
        android:textColorHint="#7C7979"
        android:layout_marginBottom="10dp"
        android:background="@drawable/support_edittext"
        android:inputType="phone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:background="@drawable/support_edittext"
        android:layout_weight="1">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:id="@+id/sign_up_category"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="13dp"
        android:gravity="center"

        android:background="@drawable/support_edittext"
        android:layout_weight="1">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:id="@+id/sign_up_city"/>
    </LinearLayout>
    <Button
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:id="@+id/sign_up_button"
       android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@drawable/btn_sign_up"
        android:text="Sign up"
        android:textColor="#fff"
        android:textSize="19sp"
        android:layout_marginTop="5dp"
        android:textStyle=""
        />
    <Button
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:id="@+id/sign_up_go_back"
        android:layout_weight="1"

        android:layout_gravity="center"
        android:background="@drawable/btn_round"
        android:text="Go back to login"
        android:textColor="#fff"
        android:textSize="19sp"
        android:layout_marginTop="20dp"
        android:textStyle=""
        />
</LinearLayout>