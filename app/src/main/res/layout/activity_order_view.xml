<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".order_view">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar_order_view"
        android:background="#ffc533"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginRight="0dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_weight="4.9"
                android:layout_height="match_parent"
                android:src="@drawable/back_button"
                android:id="@+id/back_done_right2"
                android:background="#ffc533"
                />
            <TextView
                android:id="@+id/order_details"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Order Details"
                android:layout_marginRight="20dp"
                android:textColor="#0C0A0A"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">
    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:padding="5dp"
        android:layout_marginBottom="50dp"
     android:baselineAligned="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Id :"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#20"
            android:id="@+id/order_clicked"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_weight="1"
            />
    </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="25dp"
         android:gravity="center"
         android:layout_weight="1"
         android:orientation="horizontal"
         android:baselineAligned="false">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Order Date:"
             android:textSize="18sp"
             android:textColor="#000"
             android:layout_weight="1"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text=""
             android:textSize="18sp"
             android:id="@+id/date_clicked"
             android:textColor="#000"
             android:layout_weight="1"
             />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="25dp"
         android:gravity="center"
         android:layout_weight="1"
         android:orientation="horizontal"
         android:baselineAligned="false">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Name:"
             android:textSize="18sp"
             android:textColor="#000"
             android:layout_weight="1"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text=""
             android:textSize="18sp"
             android:id="@+id/name_clicked"
             android:textColor="#000"
             android:layout_weight="1"
             />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:orientation="horizontal"
         android:baselineAligned="false">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Amount:"
             android:textSize="18sp"
             android:textColor="#000"
             android:layout_weight="1"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text=""
             android:id="@+id/amount_clicked"
             android:textSize="18sp"
             android:textColor="#000"
             android:layout_weight="1"
             />
     </LinearLayout>
<TableRow android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="1dp"
    android:background="#000"></TableRow>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"

         android:orientation="vertical"
         android:baselineAligned="false">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_weight="1"
             android:baselineAligned="false">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Description"
             android:textSize="21sp"
             android:textColor="#000"
             android:layout_weight="1"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Amount"
             android:gravity="right"
             android:textSize="21sp"
             android:textColor="#000"
             android:layout_weight="1"
             />
         </LinearLayout>
             <TableRow android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="#000"
                 />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bills_products"
                />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:background="@drawable/edittext_login"
         android:orientation="vertical"
         android:baselineAligned="false">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Total:     300"
           android:textSize="22sp"
           android:id="@+id/total_clicked"
           android:layout_marginRight="5dp"
           android:gravity="right"
           android:layout_weight="1"
           android:textColor="#000"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Discount:     30"
             android:textSize="22sp"
             android:id="@+id/discount_clicked"
             android:layout_marginRight="15dp"
             android:gravity="right"
             android:layout_weight="1"
             android:textColor="#000"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Payable:     30"
             android:textSize="22sp"
             android:id="@+id/payable_clicked"
             android:layout_marginRight="15dp"
             android:gravity="right"
             android:layout_weight="1"
             android:textColor="#000"/>
     </LinearLayout>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:text="Recieved:     0"
         android:textSize="22sp"
         android:id="@+id/recieved_clicked"
         android:textColor="#000"
         android:gravity="right"
         android:layout_marginRight="0dp"
         />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="      Booking Details          "
            android:textSize="22sp"
            android:layout_margin="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery at:"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store/Home"
                android:textSize="18sp"
                android:id="@+id/delivery_clicked"
                android:textColor="#000"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Date:"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/date2_clicked"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slot Time:"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:id="@+id/time_clicked"
                android:textColor="#000"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">
        </LinearLayout>

    </LinearLayout>


 </ScrollView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:layout_marginRight="0dp"
        android:gravity="center|left"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="accept"
            android:id="@+id/accept_clicked"
            android:textColor="#fff"
            android:background="@drawable/accept_round"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="cancel"
            android:id="@+id/cancel_clicked"
            android:textColor="#fff"
            android:background="@drawable/cancel_recycler"
            />
    </LinearLayout>
</RelativeLayout>